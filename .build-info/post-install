#!/bin/bash

#TARGET=`ls */x32/libgcc/libgcc.a  |cut -d/ -f1`
#if [ -d ${TARGET}/x32/libgcc ];then
#  make DESTDIR=${3} -C ${TARGET}/x32/libgcc install
#fi;

if [ ! -d ${3}/lib ];then
  mkdir -p ${3}/lib
fi;

if [ -x ${3}/usr/bin/cpp ];then
  ln -s ../usr/bin/cpp ${3}/lib/cpp
fi;

if [ -x ${3}/usr/bin/gjar ];then
  ln -s gjar ${3}/usr/bin/jar
fi;

if [ -x ${3}/usr/bin/gcc ];then
  ln -s gcc ${3}/usr/bin/cc
fi;

#Use Target here not x86_64
#for gtool in `(cd ${3}/usr/bin/;ls  gnat*)`;do
#  ln -s  ${gtool} ${3}/usr/bin/x86_64-linux-gnu-${gtool}
#done

if [ "${1}" == "${NARCH}" ] && [ -x ${3}/usr/bin/gcj ];then
  ${3}/usr/bin/gcj -Wl,-Bsymbolic -findirect-dispatch --main=org.eclipse.jdt.internal.compiler.batch.Main \
    /usr/share/java/ecj-3.5.2.jar -L${3}/usr/${B_LIBDIRS} -lgcj -lgcj_bc -lgcc -o ${3}/usr/bin/javac
fi;
